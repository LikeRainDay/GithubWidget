<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/github_widget_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/github_widget_3_avator_size"
        android:layout_marginTop="@dimen/github_widget_3_avator_padding_top"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/github_widget_3_avator_padding_left"
        android:layout_marginStart="@dimen/github_widget_3_avator_padding_left"
        android:layout_marginRight="@dimen/github_widget_3_avator_padding_left"
        android:layout_marginEnd="@dimen/github_widget_3_avator_padding_left"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/github_widget_3_avator_size"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/github_widget_3_avator_size"
                android:layout_height="@dimen/github_widget_3_avator_size"
                android:src="@drawable/default_avatar"
                android:layout_gravity="center"
                />

        </FrameLayout>

        <ImageView
            android:id="@+id/motto"
            android:layout_height="@dimen/github_widget_3_avator_size"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/github_widget_3_avator_padding_left"
            android:layout_marginStart="@dimen/github_widget_3_avator_padding_left"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/followers"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/github_widget_3_avator_padding_left"
            android:layout_marginStart="@dimen/github_widget_3_avator_padding_left"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/contributions_sum"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/contributions_today"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/current_streak"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/stars_today"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginRight="@dimen/github_widget_3_avator_padding_left"
            android:layout_marginEnd="@dimen/github_widget_3_avator_padding_left"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/contributions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/github_widget_3_contributions_padding_left"
        android:layout_marginStart="@dimen/github_widget_3_contributions_padding_left"
        android:layout_marginRight="@dimen/github_widget_3_contributions_padding_right"
        android:layout_marginEnd="@dimen/github_widget_3_contributions_padding_right"
        android:layout_marginBottom="@dimen/github_widget_3_contributions_padding_bottom"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

</LinearLayout>